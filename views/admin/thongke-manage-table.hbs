<script src="js/admin-crud/admin-crud-khoahoc.js"></script>
    

</head>
<body>
<div class="container-xl">
	<div class="table-responsive">
		<div class="table-wrapper">
			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Bảng <b>Khóa học</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#deleteRecord" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>						
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						{{!-- <th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
						</th> --}}
						<th>Tên khóa học</th>
						<th>Thể loại</th>
						<th>Giảng viên</th>
						<th>Điểm đánh giá</th>
					</tr>
				</thead>
				<tbody>
					{{#if KhoaHoc}}
						{{#each KhoaHoc }}
							<tr>
								{{!-- <td>
									<span class="custom-checkbox">
										<input type="checkbox" id="checkbox1" name="options[]" value="1">
										<label for="checkbox1"></label>
									</span>
								</td> --}}
								<td style="display:none;">{{_id}}</td>
								<td>{{TenKhoaHoc}}</td>
								<td>{{TheLoai2.TenTheLoai}}</td>
								<td>{{GiangVien.Ten}}</td>
								<td>{{DiemDanhGia}}</td>
								<td>
									<a  href="#detailRecord{{@index}}" data-toggle="modal"><i style="color: rgb(31, 183, 243);" class="fa fa-eye" aria-hidden="true" data-toggle="tooltip" title="Detail"></i></a>
									<a  href="#deleteRecord" class="deleteButton delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
								</td>
							</tr>
						{{/each}}
					{{else}}
						<td>Không có dữ liệu</td>
					{{/if}}
					
				
				</tbody>
			</table>
			<div class="clearfix">
				<div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
				<ul class="pagination">
					<li class="page-item disabled"><a href="#">Previous</a></li>
					<li class="page-item"><a href="#" class="page-link">1</a></li>
					<li class="page-item"><a href="#" class="page-link">2</a></li>
					<li class="page-item active"><a href="#" class="page-link">3</a></li>
					<li class="page-item"><a href="#" class="page-link">4</a></li>
					<li class="page-item"><a href="#" class="page-link">5</a></li>
					<li class="page-item"><a href="#" class="page-link">Next</a></li>
				</ul>
			</div>
		</div>
	</div>        
</div>
<!-- detail Modal HTML -->
{{#each KhoaHoc}}
	<div id="detailRecord{{@index}}" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content"  style="width:550px">
					<div class="modal-header">						
						<h4 class="modal-title">Chi tiết khóa học</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="title" >
							Tên khóa học:
						</div>
						<div class="content-data">
							{{TenKhoaHoc}}
						</div>
						<div class="title" >
							Thể loại:
						</div>
						<div class="content-data">
							{{TheLoai2.TenTheLoai}}
						</div>
						<div class="title" >
							Giảng viên:
						</div>
						<div class="content-data">
							{{GiangVien.Ten}}
						</div>
						<div class="title" >
							Học phí:
						</div>
						<div class="content-data">
							{{HocPhiGoc}}
						</div>
						<div class="title" >
							Khuyến mãi:
						</div>
						<div class="content-data">
							{{KhuyenMai}} %
						</div>
						<div class="title" >
							Mô tả ngắn:
						</div>
						<div class="content-data">
							{{MoTaNgan}}
						</div>
						<div class="title" >
							Ngày đăng:
						</div>
						<div class="content-data">
							{{NgayDang}}
						</div>
						<div class="title" >
							Cập nhật cuối:
						</div>
						<div class="content-data">
							{{CapNhatCuoi}}
						</div>
						<div class="title" >
							Điểm đánh giá:
						</div>
						<div class="content-data">
							{{DiemDanhGia}}
						</div>
						<div class="title" >
							Lượt xem:
						</div>
						<div class="content-data">
							{{LuotXem}}
						</div>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					</div>
				</form>
			</div>
		</div>
	</div>
{{/each}}


<!-- Delete Modal HTML -->
<div id="deleteRecord" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form name="deleteForm" method="POST" action="KhoaHoc/delete">
				<div class="modal-header">						
					<h4 class="modal-title">Delete Record</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p class="noti">Are you sure you want to delete these Records?</p>
					<p class="text-warning"><small >This action cannot be undone.</small></p>
				</div>
				<div class="modal-footer">
					<input id="delete_input_id" name="_id" type="text" style="display: none;">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input id="deleteButton" type="submit" class="btn btn-danger" value="Delete"  >
				</div>
			</form>
		</div>
	</div>
</div>

</body>