						{{/each}}
					{{else}}
						<td>Không có dữ liệu</td>
					{{/if}}
					
				
				</tbody>
			</table>
			<div class="d-flex justify-content-center ">
				{{>pagination}}
			</div>
		</div>
	</div>        
</div>
<!-- detail Modal HTML -->
