<div class="super_container">

	<!-- Header -->

	{{>home_header}}


	
	<!-- Home -->

	<div class="home">
		{{>home_slider}}
	</div>

		<!-- Home Slider Nav -->

		<div class="home_slider_nav home_slider_prev"><i class="fa fa-angle-left" aria-hidden="true"></i></div>
		<div class="home_slider_nav home_slider_next"><i class="fa fa-angle-right" aria-hidden="true"></i></div>
	</div>

	<!-- Features -->

	<div style="margin-top: -280px;" class="features ">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title_container text-center">
						<h2 class="section_title">Các lĩnh vực nổi bật trong tuần</h2>
					
				</div>
				</div>
			</div>
			<div class="row features_row d-flex justify-content-center">
				
				{{#each theloainoibat }}
						<div class="col-lg-3 feature_col">
							<a href="/category2/{{_id}}">
								<div class="feature text-center trans_400">
									<div class="feature_icon"><img src="images/icon_3.png" alt=""></div>
									<h3 class="feature_title">{{TenTheLoai}}</h3>
									{{!-- <div class="feature_text"><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p></div> --}}
								</div>
							</a>
					</div>
				{{/each}}
			</div>
		</div>
	</div>

	<!-- Popular Courses -->

	<div class="courses">
		<div class="section_background parallax-window" data-parallax="scroll" data-image-src="images/courses_background.jpg" data-speed="0.8"></div>
		<div class="container">
			<div class="row courses-title">
				<div class="col">
					<div class="section_title_container text-center">
						<h2 class="section_title">Khóa học mới nhất</h2>
					
					</div>
				</div>
			</div>

			
			<div class="row courses_row">
				<!--  newestCourse -->
				<div id ="owl-1" class="owl-carousel owl-theme">
			
					{{#each newest }}
						<div class="item">
							<div class="course">
								<div class="course_image"><img src={{this.AnhDaiDien}} alt=""></div>
								<div class="course_body">
									<h3 class="course_title"><a href="/user/course/{{_id}}">{{this.TenKhoaHoc}}</a></h3>
									<div class="course_teacher"></div>
									<div class="course_text">
										<p>{{this.MoTaNgan}}</p>
									</div>
								</div>
								<div class="course_footer">
									<div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
										<div class="course_info">
											<i class="fa fa-star" aria-hidden="true"></i>
											<span>{{this.DiemDanhGia}} Ratings</span>
										</div>
										<div class="course_price ml-auto">{{this.HocPhiGoc}}$</div>						
									</div>
									{{#if ../isAuthentication}}
											<p style="display: none;" class="id_khoahoc">{{_id}}</p>
									{{else}}
												<p style="display: none;" class="id_khoahoc">-1</p>
									{{/if}}
								
									<button class="btn btn-info btn-sm add-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i></button>
									<button class="btn btn-danger btn-sm add-wl"> <i class="fa fa-heart-o" aria-hidden="true"></i></button>
								</div>
							</div>
						</div>
					{{/each}}
				</div>

			</div>
	
			<div class="row courses-title">
				<div class="col">
					<div class="section_title_container text-center">
						<h2 class="section_title">Khóa học nổi bật</h2>
					
					</div>
				</div>
			</div>

			
			<div class="row courses_row">
				<!--  bestcourse -->
				<div id ="owl-2" class="owl-carousel owl-theme">
			
					{{#each bestCourse }}

						<div class="item">
							<div class="course">
								<div class="course_image"><img src={{this.AnhDaiDien}} alt=""></div>
								<div class="course_body">
									<h3 class="course_title"><a href="/user/course/{{_id}}">{{this.TenKhoaHoc}}</a></h3>
									<div class="course_teacher"></div>
									<div class="course_text">
										<p>{{this.MoTaNgan}}</p>
									</div>
								</div>
								<div class="course_footer">
									<div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
										<div class="course_info">
											<i class="fa fa-star" aria-hidden="true"></i>
											<span>{{this.DiemDanhGia}} Ratings</span>
										</div>
										<div class="course_price ml-auto">{{this.HocPhiGoc}}$</div>						
									</div>
									{{#if ../isAuthentication}}
											<p style="display: none;" class="id_khoahoc">{{_id}}</p>
									{{else}}
												<p style="display: none;" class="id_khoahoc">-1</p>
									{{/if}}
								
									<button class="btn btn-info btn-sm add-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i></button>
									<button class="btn btn-danger btn-sm add-wl"> <i class="fa fa-heart-o" aria-hidden="true"></i></button>
								</div>
								
							</div>
						</div>
					{{/each}}
				</div>
			</div> 	

				<div class="row courses-title">
				<div class="col">
					<div class="section_title_container text-center">
						<h2 class="section_title">Khóa học xem nhiều nhất</h2>
						
					</div>
				</div>
			</div>

			
			<div class="row courses_row">
				<!--  mostview -->
				<div id ="owl-3" class="owl-carousel owl-theme">
			
					{{#each mostView }}

						<div class="item">
							<div class="course">
								<div class="course_image"><img src={{this.AnhDaiDien}} alt=""></div>
								<div class="course_body">
									<h3 class="course_title"><a href="/user/course/{{_id}}">{{this.TenKhoaHoc}}</a></h3>
									<div class="course_teacher"></div>
									<div class="course_text">
										<p>{{this.MoTaNgan}}</p>
									</div>
								</div>
								<div class="course_footer">
									<div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
										<div class="course_info">
											<i class="fa fa-star" aria-hidden="true"></i>
											<span>{{this.DiemDanhGia}} Ratings</span>
										</div>
										<div class="course_price ml-auto">{{this.HocPhiGoc}}$</div>						
									</div>
									{{#if ../isAuthentication}}
											<p style="display: none;" class="id_khoahoc">{{_id}}</p>
									{{else}}
												<p style="display: none;" class="id_khoahoc">-1</p>
									{{/if}}
								
									<button class="btn btn-info btn-sm add-cart"><i class="fa fa-cart-plus" aria-hidden="true"></i></button>
									<button class="btn btn-danger btn-sm add-wl"> <i class="fa fa-heart-o" aria-hidden="true"></i></button>
								</div>
							</div>
						</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>


	



	
</div>


